<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:name=".AppExample"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/botella"
        android:label="Pico Botella"
        android:roundIcon="@drawable/botella"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miniproyecto1"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- Splash Activity -->
        <activity
            android:name=".view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".view.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Miniproyecto1.NoActionBar" />

        <!-- FragmentB Activity -->
        <activity
            android:name=".view.fragment.FragmentB"
            android:exported="true" />

        <!-- Main Activity -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.Miniproyecto1.NoActionBar" />

    </application>

</manifest>

